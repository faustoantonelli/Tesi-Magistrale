}


%%%%%%%%%%%%%%%%%%%% DEFINIZIONE TEOREMI %%%%%%%%%%%%%%%%%%%%%

\newtheoremstyle{mydef} % Name for theoremstyle
	{0pt}% Space above
	{10pt}% Space below
	{\itshape}% Body font
	{}% Indent amount
	{\bfseries}% Theorem head font
	{}% Punctuation after theorem head
	{\newline}% Space after theorem head
	{\thmname{#1}\thmnumber{ #2}\thmnote{ - #3}}% Theorem head spec (can be left empty, meaning ‘normal’)
\theoremstyle{mydef}
\newmdtheoremenv[style=theoremstylebox]{definition}{Definizione}[chapter]
\theoremstyle{plain}
\newmdtheoremenv{cit}{Citazione}
\newtheorem{comm}{Commento}

\newtheoremstyle{mythm}% hnamei
	{0pt}% Space above
	{10pt}% Space below
	{\itshape}% Body font
	{}% Indent amount
	{\bfseries}% Theorem head font
	{}% Punctuation after theorem head
	{\newline}% Space after theorem head
	{\thmname{#1}\thmnumber{ #2}\thmnote{ - #3}}% Theorem head spec (can be left empty, meaning ‘normal’)
\theoremstyle{mythm}
\newmdtheoremenv[style=theoremstylebox]{theorem}[definition]{Teorema}
\newmdtheoremenv[style=theoremstylebox]{lemma}[definition]{Lemma}
\newmdtheoremenv[style=theoremstylebox]{proposition}[definition]{Proposizione}
\newmdtheoremenv[style=theoremstylebox]{corollary}[definition]{Corollario}
\newmdtheoremenv[style=theoremstylebox]{fact}[definition]{Fatto}
%\newmdtheoremenv[style=theoremstylebox]{definizione}[definition]{Definizione}

\newtheoremstyle{myremark}% hnamei
{10pt}% Space above
{10pt}% Space below
{}% Body font
{}% Indent amount
{\bfseries}% Theorem head font
{}% Punctuation after theorem head
{\newline}% Space after theorem head
{\thmname{#1}\thmnumber{ #2}\thmnote{ - #3}}% Theorem head spec (can be left empty, meaning ‘normal’)
\theoremstyle{myremark}
\newtheorem{observation}{Osservazione}[chapter]
\newtheorem{notation}[observation]{Notazione}
\newtheorem{exercise}[observation]{Esercizio}
\newtheorem{example}[definition]{Esempio}

\newtheoremstyle{myproof}% hnamei
{10pt}% Space above
{10pt}% Space below
{}% Body font
{}% Indent amount
{\itshape}% Theorem head font
{.}% Punctuation after theorem head
{ }% Space after theorem head
